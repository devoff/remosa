# Настройки логирования
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Grafana Webhook настройки
GRAFANA_WEBHOOK_SECRET=your_webhook_secret_here

# Настройки CORS
CORS_ALLOW_CREDENTIALS=true
