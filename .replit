modules = ["python-3.12", "nodejs-20", "web"]
run = "docker-compose up"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "docker-compose up"]

[workflows]
runButton = "Run Full Stack"

[[workflows.workflow]]
name = "Start Backend"
author = 43232866
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python -m uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow]]
name = "Start Frontend"
author = 43232866
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm start"

[[workflows.workflow]]
name = "Run Full Stack"
author = 43232866
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python -m uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm start"
